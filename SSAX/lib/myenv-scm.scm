		; Very SCM-specific definitions
(defmacro define-macro (bindings . body)
  (if (pair? bindings)
      `(defmacro ,(car bindings) ,(cdr bindings) ,@body)
      (let ((rest (gensym)))
	`(defmacro ,bindings ,rest (apply ,@body ,rest)))))


